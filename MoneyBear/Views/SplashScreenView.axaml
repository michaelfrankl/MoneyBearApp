<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="450"
             x:Class="MoneyBear.Views.SplashScreenView">
    
    <Panel Background="#cedddd">
        <StackPanel Spacing="10" VerticalAlignment="Center">
            <Image Source="/Assets/Icons/AppIcon.png" Width="300" Height="300"></Image>
            
            <ProgressBar Name="ProgressBar" MaxWidth="350" MaxHeight="5" MinHeight="5" IsIndeterminate="True"/>
            
            <TextBlock Text="Loading..." Name="LoadingText" HorizontalAlignment="Center" FontSize="20" Foreground="Black"/>
            
        </StackPanel>
    </Panel>
</UserControl>
